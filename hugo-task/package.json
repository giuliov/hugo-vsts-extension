{
  "name": "HugoTask",
  "description": "HugoTask",
  "scripts": {
    "build": "npm run clean && npm run lint && npm run transpile ",
    "package": "npm prune -production && npm run copy",
    "copy": "ncp ./node_modules ./node_modules && ncp ./dist/src .",
    "clean": "rimraf ./dist/src && rimraf ./dist/test && rimraf ./*.js && rimraf ./*.js.map && rimraf ./node_modules",
    "transpile": "tsc -p ./",
    "lint": "tslint -c tslint.json *.ts test/*.ts",
    "test": "mocha -r ts-node/register ./test/*.ts --reporter mocha-junit-reporter --reporter-options mochaFile=./test-output/test-results.xml ",
    "test-no-logger": "mocha -r ts-node/register ./test/*.ts "
  },
  "main": "HugoTask.js",
  "dependencies": {
    "@types/node": "^10.17.0",
    "@types/mocha": "^5.2.7",
    "azure-pipelines-tool-lib": "^1.0.0-preview.0",
    "azure-pipelines-task-lib": "^3.0.6-preview.0",
    "azure-pipelines-tasks-utility-common": "^3.0.0-preview.0"
  },
  "devDependencies": {
    "typescript": "4.0.2"
  },
  "author": "Giulio Vian",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git://github.com/giuliov/hugo-vsts-extension.git"
  }
}
